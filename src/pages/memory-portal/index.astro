---
import { Image } from 'astro:assets'

import { Icon } from 'astro-pure/user'
import BaseLayout from '@/layouts/BaseLayout.astro'
import crespo from '@/assets/crespo.jpg'

const combatientes = [
  { name: 'Ernesto H. Crespo.', description: 'Brigadier general', image: crespo },
  { name: 'Ernesto H. Crespo.', description: 'Brigadier general', image: crespo },
  { name: 'Ernesto H. Crespo.', description: 'Brigadier general', image: crespo },
  { name: 'Ernesto H. Crespo.', description: 'Brigadier general', image: crespo }
]
---

<BaseLayout meta={{ title: 'Portal Malvinas' }}>
  <div class='flex flex-col gap-y-10'>
    <div class='flex flex-col items-center justify-between gap-4 md:flex-row'>
      <h1 class='font-balboa text-4xl md:text-6xl'>Portal Malvinas</h1>
      <div class='relative w-full md:w-auto' role='search'>
        <input
          placeholder='Buscar por nombre'
          class='placeholder:text-muted-foreground border-dark p-y-2 p-x-4 w-full rounded-md border-2 pr-10'
        />
        <Icon
          aria-label='Search Icon'
          name='search'
          class='text-muted-foreground absolute end-3 top-1/2 size-5 -translate-y-1/2'
        />
      </div>
    </div>

    <div class='grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4'>
      {
        combatientes.map((item) => (
          // ðŸ‘‡ LA TARJETA CORREGIDA
          <div class='border-dark bg-muted group relative flex h-full flex-col overflow-hidden border'>
            <div class='relative aspect-square w-full overflow-hidden'>
              <Image
                src={item.image}
                alt={`FotografÃ­a de ${item.name}`}
                class='absolute inset-0 w-full object-cover transition-transform duration-300 group-hover:scale-110'
                loading='lazy'
              />
            </div>

            <div class='flex flex-grow flex-col p-6 text-center'>
              <p class='text-foreground text-lg font-semibold'>{item.name}</p>
              <p class='text-muted-foreground mt-1 flex-grow text-sm'>{item.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>

<script is:inline type='module' data-astro-rerun></script>
